<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fog"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.guanyin.sardar.weatherapp.WeatherActivity">


    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/weather"
            style="@style/itemTheme"
            android:drawableTop="@drawable/selector_weather"
            android:text="@string/weather"/>

        <RadioButton
            android:id="@+id/live"
            style="@style/itemTheme"
            android:drawableTop="@drawable/selector_live"
            android:text="@string/live"/>

        <RadioButton
            android:id="@+id/around"
            style="@style/itemTheme"
            android:drawableTop="@drawable/selector_around"
            android:text="@string/around"/>

        <RadioButton
            android:id="@+id/me"
            style="@style/itemTheme"
            android:drawableTop="@drawable/selector_me"
            android:text="@string/me"/>
    </RadioGroup>

</LinearLayout>